{
	"name": "copy-code-location",
	"displayName": "Copy Code Location",
	"description": "Copy selected code with file path and line numbers, optimized for sharing with LLMs. Supports both relative and absolute paths.",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.96.0"
	},
	"publisher": "shengdi",
	"author": {
		"name": "shengdi"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sheng-di/copy-code-location"
	},
	"icon": "images/copy-code-with-extension-icon.png",
	"galleryBanner": {
		"color": "#232323",
		"theme": "dark"
	},
	"categories": [
		"Formatters",
		"Other"
	],
	"keywords": [
		"markdown",
		"code-block",
		"copy",
		"code-location",
		"line-numbers",
		"LLM"
	],
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "copy-code-location.copyRelative",
				"title": "Copy Code with Relative Path"
			},
			{
				"command": "copy-code-location.copyAbsolute",
				"title": "Copy Code with Absolute Path"
			}
		],
		"keybindings": [
			{
				"command": "copy-code-location.copyRelative",
				"key": "ctrl+alt+L",
				"mac": "ctrl+alt+L",
				"when": "editorTextFocus"
			},
			{
				"command": "copy-code-location.copyAbsolute",
				"key": "ctrl+alt+shift+L",
				"mac": "ctrl+alt+shift+L",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.96.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"eslint": "^9.16.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	}
}